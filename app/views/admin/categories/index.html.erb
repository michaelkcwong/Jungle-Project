
<header class="page-header">
<h1>
  Admin &raquo; Categories
</h1>
</header>

<div class="well">
<%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
</div>

<div class="order-summary jumbotron">
<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Category</th>
      <th>Link</th>
    </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.name %></td>
      <td><a href="/categories/<%=category.id%>" class='btn btn-info'>Visit</a></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>